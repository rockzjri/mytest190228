<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--加载资源属性文件,说明：
        1.resource：加载【本地的】资源文件
        2.url：加载【网络上的】资源文件url="http://127.0.0.1:8081/db.properties"
        3.使用内部property标签，定义属性
        4.加载顺序：首先加载内部property标签定义的属性，再加载属性资源文件中的属性。如果
        有相同的属性，属性文件中的属性会覆盖内部property标签定义的属性
    -->
    <properties resource="db.properties" >
        <property name="db.username" value="root123"/>
        <property name="db.password" value="admin"/>
    </properties>

    <!--自定义别名-->
    <typeAliases>
        <!--配置用户别名，说明：
            1.type：配置别名的类型
            2.默认使用类的名称作为别名的名称
            3.alias：配置别名的名称

        <typeAlias type="cn.itheima.po.User" alias="user"/>-->

        <!--包扫描方式配置别名，说明：
            1.name：配置要扫描的包
            2.默认都是使用类的名称，作为别名的名称
            3.如果有多个包,在同一个父包下，配置父包即可
            4.不在同一个父包，配置多个package：<package name="cn.itcast.po"/>
            5.在企业项目中，实际的使用方式
        -->
        <package name="cn.itheima.po"/>

    </typeAliases>

    <!--配置插件-->
    <plugins>
        <!-- com.github.pagehelper为PageHelper类所在包名 -->
        <plugin interceptor="com.github.pagehelper.PageInterceptor">
            <!-- 配置相关参数-->
            <property name="helperDialect" value="mysql"/>
        </plugin>
    </plugins>

    <!-- 运行环境配置 -->
    <!-- default：指定使用哪一个运行环境 -->
    <environments default="mysql">
        <!--id：唯一标识一个运行环境-->
        <environment id="mysql">
            <!--配置事务，说明：
                type="JDBC"：默认使用jdbc事务
            -->
            <transactionManager type="JDBC"></transactionManager>
            <!--配置数据源，说明：
                type="POOLED"：mybatis内部提供的连接池
            -->
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"></property>
                <property name="url" value="${db.url}"></property>
                <property name="username" value="${db.username}"></property>
                <property name="password" value="${db.password}"></property>
            </dataSource>
        </environment>
    </environments>

    <!--加载mapper映射文件-->
    <mappers>

        <!--包扫描方式加载接口映射文件，说明：
            1.前提必须是mapper代理的开发方法
            2.要求mapper接口映射文件，与mapper接口要放在同一个目录
            3.要求mapper接口映射文件的名称，与mapper接口的名称一致
        -->
        <package name="cn.itheima.dao"/>
    </mappers>

</configuration>